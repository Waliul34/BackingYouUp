<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    android:layout_margin="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/imageView"
            app:cardCornerRadius = "@dimen/_50sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_5sdp">
            
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="centerCrop"
                app:tint = "#2118c7"
                android:src="@drawable/ic_single_contact"
                android:id="@+id/singleContactImageView"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recy_contact_name"
            android:text="Waliul Islam Sumon"
            android:textIsSelectable="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_17ssp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_12sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recy_contact_phone"
            android:text="+8801709186979"
            android:textIsSelectable="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_12sdp"/>


        <ImageButton
            android:id="@+id/recy_make_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_make_call"
            android:backgroundTint="@color/light_color"
            android:tint="@color/green" />

        <ImageButton
            android:id="@+id/recy_send_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_send_message"
            android:backgroundTint="@color/light_color"
            android:tint="@color/purple_500" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>